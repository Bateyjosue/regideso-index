generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_STRING")
}



model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password_hash String
  role          Role      @default(USER)
}

enum Role {
  USER
  ADMIN
}
model Direction {
    id    Int     @id @default(autoincrement())
}

